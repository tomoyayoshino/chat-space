.sideBar
  .sideBar__userName
    .sideBar__userName__box
      .sideBar__userName__box__name
        = current_user.name
      .sideBar__userName__box__icons
        = link_to new_group_path(current_user) do
          = icon('far', 'edit', class: 'sideBar__userName__box__icons__btn')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'sideBar__userName__box__icons__btn sideBar__userName__box__icons__btn--space')

  .sideBar__groupList
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

